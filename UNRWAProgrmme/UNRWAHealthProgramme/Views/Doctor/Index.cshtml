
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject UserIRepo UserRepo
@inject EmployeeIRepo EmployeeRepo

@model DoctorDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/HomeDoctor.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Document</title>
   
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #1d86df; height: 3.5rem;">
        <a class="navbar-brand text-center" href="#">
            <img src="~/images/user.jpg" alt="logo" class="img1 img-fluid">
            <span class="logo__name">@UserRepo.FindUserName(UserManager.GetUserAsync(User).Result.Id).FirstName</span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNavDropdown" style="background-color: #1d86df;">
          <ul class="navbar-nav" style="background-color: #1d86df; ">
            <li class="nav-item active">
              <a class="nav-link" asp-action="Logout" asp-controller="UsersManager">log out</a>
            </li>
        
          </ul>
        </div>
       
        <div class="nav__icons">
            <img src="~/images/unrwa-logo-0DB0E000FE-seeklogo.com.png" alt="logo" class=" img__1 img-fluid">
        </div>


      </nav>
<div class="container ">
    <h1 class="text_1">Good morning Dr @UserRepo.FindUserName(UserManager.GetUserAsync(User).Result.Id).FirstName</h1>

    <div class="row">
   
<div class="col-lg-6 col-md-3 col-ms-6">

</div>

<div class="col-lg-2 col-md-3 col-ms-6">
    <div class="service-time one" style="background:#2895f1; "  >
     <h1 class="text_2">Next Appointment</h1>
           <button  data-toggle="modal" data-target="#exampleModal_3" class="btn btn-light btn-radius button_2 btn-brd grd1 effect-1" id="next-appointment-btn"><i class='bx bx-right-arrow-alt' style="color:#2895f1 ; font-size: 30px; text-align: center;" ></i></button>
        </div>
    
     </div>
     <!--Next Appointment Modal -->
<div class="modal fade" id="exampleModal_3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel" style="color: #1d86df;">Next Appointment</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #1d86df;">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" style="color: #1d86df;">
            <label class="form-group" >
                <span style="color: a#1d86df; font-weight: 500;  color:#1d86df;" >Patient Name:</span>
                <span type="text" class="form-control" style="background-color: #fff; color: #2895f1;" id="pationtName">@*@Model.nextAppointment.IndividualName *@</span>
            
                <span style="color: a#1d86df; font-weight: 500;  color: #1d86df;" >time:</span>
                <span type="time" class="form-control" style="background-color: #fff;color: #2895f1" id="time" >@*@Model.nextAppointment.DateOfReservation.Hour:@Model.nextAppointment.DateOfReservation.Minute*@</span>
            </label>
        </div>
        <div class="modal-footer">
        
          <button type="button" class="btn btn-secondary button_1 btn-brd grd1 effect-1" data-dismiss="modal" >OK</button>
        </div>
      </div>
    </div>
  </div>
 
<div class="col-lg-2 col-md-3 col-ms-6">
    <div class="service-time one"  style="background:#0071d1; margin-top: 20px;"  >
     <h1 class="text_2">Queue</h1>
     <a  class="btn btn-light btn-radius button_2 btn-brd grd1 effect-1" asp-action="Queue" asp-controller="Doctor" asp-route-employeeId="@EmployeeRepo.FindEmployeeByUserId(UserManager.GetUserAsync(User).Result.Id).Id"><i class='bx bx-right-arrow-alt' style="color:#0071d1 ; font-size: 30px; text-align: center;" ></i></a>
    </div>
</div>
<div class="col-lg-2 col-md-3 col-ms-6">
    <div class="service-time one"  style="background:#0060b1; margin-top:40px;"  >
     <h1 class="text_2">Browse previews</h1>
     <button  class="btn btn-light btn-radius button_2 btn-brd grd1 effect-1"><i class='bx bx-right-arrow-alt' style="color:#0060b1 ; font-size: 30px; text-align: center;" ></i></button> 
    </div>
</div>
</div>
<div class="row">
<div class="col-lg-6 col-md-3 col-ms-6">

</div>

<div class="col-lg-2 col-md-3 col-ms-6">
    <div class="service-time one" style="background:#2895f1; "  >
 
     <h1 class="text_2">Browse medicines</h1>
     <a  class="btn btn-light btn-radius button_2 btn-brd grd1 effect-1" asp-action="medicin" asp-controller="Doctor" ><i class='bx bx-right-arrow-alt' style="color:#2895f1 ; font-size: 30px; text-align: center;" ></i></a>
        </div>
    
     </div>

     <div class="col-lg-2 col-md-3 col-ms-6">
        <div class="service-time one"  style="background:#0071d1; margin-top: 20px;"  >
            <h1 class="text_2">Browse Analytics</h1>
            <button  class="btn btn-light btn-radius button_2 btn-brd grd1 effect-1"><i class='bx bx-right-arrow-alt' style="color:#0071d1 ; font-size: 30px; text-align: center;" ></i></button> 
        </div>
    </div>
    <div class="col-lg-2 col-md-3 col-ms-6">
        <div class="service-time one"  style="background:#0060b1; margin-top:40px;"  >
         <h1 class="text_2">Browse appointments</h1>
         <button  class="btn btn-light btn-radius button_2 btn-brd grd1 effect-1"><i class='bx bx-right-arrow-alt' style="color:#0060b1 ; font-size: 30px; text-align: center;" ></i></button> 
               
        </div>
    </div>

    </div>

</div>















