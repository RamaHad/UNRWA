      <link href='http://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' rel="stylesheet" id="bootstrap-css">
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
       

</head>
<body>

    <!--nav-->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #1d86df; height: 3.5rem;">
        <a class="navbar-brand text-center" href="#">
             <img src="~/images/user.jpg" alt="logo" class="img1 img-fluid">
             <span class="logo__name">@UserRepo.FindUserName(UserManager.GetUserAsync(User).Result.Id).FirstName</span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNavDropdown" style="background-color: #1d86df;">
          <ul class="navbar-nav" style="background-color: #1d86df; ">
            <li class="nav-item active" style="display: flex;">
              <a class="nav-link" asp-action="Logout" asp-controller="UsersManager">log out</a>
              <a class="nav-link"  style="margin-left: 10px;" asp-action="Index" asp-controller="Doctor">Home</a>
            </li>
        
          </ul>
        </div>
       
        <div class="nav__icons">
            <img src="~/images/unrwa-logo-0DB0E000FE-seeklogo.com.png" alt="logo" class=" img__1 img-fluid">
        </div>


      </nav>

    <div class="container" style="color: #1d86df;  margin-top: 7rem;">
        <div class="row">
            <label class="form-group">
                <span style="color: a#1d86df; font-weight: 600; " >Number previews:</span>
                <span type="text" class="form-control" style="background-color: #fff;">@Model.AppointmentsInQueue.Count</span>
            
           
            </label>
        <table id="example" class="table table-bordered" style="width:100%">
            <thead>
                <tr>
                  
                    <th> Person Number</th>
                    <th> Person Name</th>
                    <th> Service Type</th>
                    <th style="width: 20%;">Date</th>
                    <th style="width: 30%;">Action</th>
                
                </tr>
            </thead>
            <tbody>
             @foreach (var item in Model.AppointmentsInQueue)
                    {
                        if(item.Status == 2) //quick
                        {
                              <tr>
                 
          
                    <td style="color:red">@item.IndividualId</td>
                    <td  style="color:red">@item.IndividualName</td>
                    <td style="color:red">Quick</td>
                    <td  style="color:red">@item.DateOfReservation</td>
                    <td>  <a href="" target="_blank" data-scroll class="btn btn-light btn-radius button_1 btn-brd grd1 effect-1">Create a preview </a>
                        <a href="" target="_blank" data-scroll class="btn btn-light btn-radius button_1 btn-brd grd1 effect-1">Delete  <i class='bx bx-trash'></i></a>
                        </td>
                            </tr>
                        }
                        else
                        {
                              <tr>
                 
          
                    <td>@item.IndividualId</td>
                    <td>@item.IndividualName</td>
                    <td>@item.ServiceName</td>
                    <td>@item.DateOfReservation</td>
                    <td>  <a href="" target="_blank" data-scroll class="btn btn-light btn-radius button_1 btn-brd grd1 effect-1">Create a preview </a>
                        <a href="" target="_blank" data-scroll class="btn btn-light btn-radius button_1 btn-brd grd1 effect-1">Delete  <i class='bx bx-trash'></i></a>
                        </td>
                </tr>
                        }
                    }
                </tbody>
                </table>
</div>
</div>

 <script src="~/js/QUEUE.js"></script>
</body>
</html>
   
